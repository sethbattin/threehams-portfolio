header
  section
    h1 {{ ::page.user.name }}
    h2 {{ ::page.user.title }}
  section
    h2
      | Expertise
    icon(icon-id="#check")
    ul(list-style='centered')
      li(ng-repeat='expertise in ::page.user.expertise') {{ ::expertise }}
  section
    h2
      | Tech Skill Set
    icon(icon-id="#markup")
    ul(list-style='centered')
      li(ng-repeat='skill in ::page.user.skills') {{ ::skill }}
main
  section.profile
    icon-header
      icon(icon-id="#profile")
      h2 Profile
    p {{ ::page.user.profile }}
  section.experience
    icon-header
      icon(icon-id="#briefcase")
      h2 Experience
    ul(list-style='offset')
      li(ng-repeat='job in ::page.user.jobs')
        project(data='job')

    icon-header
      icon(icon-id="#fork")
      h2 Projects
    ul(list-style='offset')
      li(ng-repeat='project in ::page.user.projects')
        project(data='project')

    icon-header
      icon(icon-id="#pencil")
      h2 Education
    ul(list-style='offset')
      li
        h2
          | {{ ::page.user.education.degree }}
        p
          strong {{ ::page.user.education.date | date: 'MMM yyyy' }}
          span {{ ::page.user.education.college }}

  footer
    icon.contact-box-icon(icon-id="#contact")
    .contact-box
      .contact-box-info
        strong {{ ::page.user.address }}, {{ ::page.user.zipcode }}
        a(href='mailto:{{ ::page.user.email }}')
          strong {{ ::page.user.email }}
      .contact-box-info
        strong {{ ::page.user.phone }}
        a(href='{{ ::page.user.link }}')
          strong {{ ::page.user.link }}
a.view-source(href='https://github.com/threehams/threehams.github.io/tree/master/src') View Source
